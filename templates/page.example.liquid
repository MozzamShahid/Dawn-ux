<section class="shopify-section">
    <div class="container">
        <h1>Featured Products</h1>
        <div class="shopify-collection">
            {% for product in collections['mac-oc-featured'].products %}
                <div class="product-item">
                    <div class="product-image">
                        <img src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.title }}">
                    </div>
                    <h2>{{ product.title }}</h2>
                    <p>{{ product.description | truncate: 100 }}</p>
                    <a href="{{ product.url }}" class="product-link">View Product</a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>


<style>
.shopify-section {
    background-color: #f9f9f9;
    padding: 60px 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

h1 {
    text-align: center;
    margin-bottom: 50px;
    color: #333;
    font-size: 2em;
}

.shopify-collection {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
}

.product-item {
    width: calc(33.33% - 20px); /* Three items per row minus the gap */
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
}

.product-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.product-image {
    margin-bottom: 15px;
    overflow: hidden;
    border-radius: 10px;
}

.product-image img {
    max-width: 100%;
    transition: transform 0.3s ease;
}

.product-item:hover .product-image img {
    transform: scale(1.1);
}

.product-link {
    display: inline-block;
    padding: 10px 20px;
    background-color: #3498db;
    color: #ffffff;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.product-link:hover {
    background-color: #2980b9;
}

</style>